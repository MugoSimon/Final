<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Buyer.MakeOrder">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_makeOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/container_image"
        android:layout_width="160dp"
        android:layout_height="210dp"
        android:layout_below="@+id/toolbar_makeOrder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_container" />

    <TextView
        android:id="@+id/container_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Container Name"
        android:textColor="@color/intro_title_color"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_name"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:text="Price: "
        android:textColor="@color/info_description_color"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/container_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_name"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:text="container price"
        android:textColor="@color/intro_title_color"
        android:textSize="20sp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:id="@+id/number_ofContainers"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_totalAmount"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/button_makeOrder"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/number_ofContainers"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="@color/faint_yellow"
        android:text="Order Now"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vendor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/image_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textview_totalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="serif-monospace"
        android:text="total"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />


</RelativeLayout>