<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frg_addItems"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp"
    tools:context=".Vendor.AddItems.AddItems">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_itemName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:textColorHint="#304FFE"
        app:boxStrokeColor="#304FFE"
        app:errorEnabled="true"
        app:hintAnimationEnabled="true">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/ic_container"
            android:hint="Container name"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#000" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_itemPrice"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_itemName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:textColorHint="#304FFE"
        app:boxStrokeColor="#304FFE"
        app:errorEnabled="true"
        app:hintAnimationEnabled="true">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/ic_money"
            android:hint="Price"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#000" />


    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_itemPrice"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="Select type:"
            android:textColor="#000"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/fragment_spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="3dp" />

    </LinearLayout>


    <Button
        android:id="@+id/fragment_chooseContainer"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/purple_yake"
        android:text="add image"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary_rest"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/fragment_imageviewerContainer"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_below="@+id/fragment_chooseContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_container" />

    <Button
        android:id="@+id/fragment_buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:background="@color/gradient_end_color"
        android:text="Save Item"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_imageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="TextView"
        android:visibility="invisible" />

</RelativeLayout>